Host *
  ForwardAgent yes
  IdentitiesOnly yes
  PasswordAuthentication no
  ServerAliveInterval 15
  StrictHostKeyChecking no
  TCPKeepAlive yes

Host git*
  User massakai
  IdentityFile ~/.ssh/github

Host raspberrypi
  Hostname 192.168.2.119
  User pi

# Heroku
Host heroku.com
  User massakai
  IdentityFile ~/.ssh/heroku.pem

# OpenShift
Host *.rhcloud.com
  User massakai
  IdentityFile ~/.ssh/openshift.pem

# Amazon EC2
Host ec2.gateway
  Hostname ec2-54-238-240-128.ap-northeast-1.compute.amazonaws.com
  User ec2-user
  IdentityFile ~/.ec2/gateway.pem

Host redmine*
  Hostname ec2-54-199-134-80.ap-northeast-1.compute.amazonaws.com

Host redmine_as_redmine
  User redmine
  IdentityFile ~/.ssh/redmineuser.pem

Host redmine_as_ubuntu
  User ubuntu
  IdentityFile ~/.ec2/redmine.pem

Host python*
  Hostname ec2-54-64-17-241.ap-northeast-1.compute.amazonaws.com
  User ubuntu
  IdentityFile ~/.ssh/python_study_20140813.pem

