Host *
  ForwardAgent yes
  IdentitiesOnly yes
  PasswordAuthentication no
  ServerAliveInterval 15
  StrictHostKeyChecking no
  TCPKeepAlive yes

Host github.com
  User massakai
  IdentityFile ~/.ssh/github

Host raspberrypi
  Hostname 192.168.2.119
  User pi

# Heroku
Host heroku.com
  User massakai
  IdentityFile ~/.ssh/heroku.pem

# OpenShift
Host *.rhcloud.com
  User massakai
  IdentityFile ~/.ssh/openshift.pem

